{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "importsNotUsedAsValues": "remove"
    // "strict": true
  },
  "include": [
    "hardhat.config.ts",
    "rollup.config.ts",
    "svelte/*.svelte",
    "svelte/*.ts",
    "lib/**/*.ts",
    "solidity/deploy/**/*.ts",
    "solidity/scripts/**/*.ts",
    "solidity/tasks/**/*.ts",
    "solidity/tests/**/*.ts"
  ],
  "exclude": ["gulpfile.js", "solidity/artifacts", "node_modules", "old", "thegraph"]
}
