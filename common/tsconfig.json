{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@utils/*": ["utils/*"],
      "@lib/*": ["lib/*"],
      "@abis/*": ["abis/*"],
      "@config/*": ["config/*"],
      "@soltypes/*": ["types/*"]
    }
  },
  "include": ["**/*.ts", "../svelte/helpers/metamask.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
