{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "resolveJsonModule": true,
    "paths": {
      "lib/*": ["lib/*"],
      "config/*": ["config/*"],
      "types/*": ["types/*"],
      "abis/*": ["abis/*"]
    }
  },
  "include": ["abis/*.ts", "lib/*.ts", "types/**/*.ts", "scripts/**/*.ts"]
}
