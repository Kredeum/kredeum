{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@utils/*": [
        "utils/*"
      ],
      "@lib/*": [
        "lib/*"
      ],
      "@abis/*": [
        "abis/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@soltypes/*": [
        "types/*"
      ]
    }
  },
  "include": [
    "**/*.ts"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}