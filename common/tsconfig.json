{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "../",
    "paths": {
      "@lib/*": ["common/lib/*"],
      "@utils/*": ["common/utils/*"],
      "@config/*": ["common/config/*"],
      "@soltypes/*": ["contracts/types/*"],
      "@abis/*": ["contracts/out/*"],
      "@contracts/*": ["contracts/*"]
    }
  },
  "include": ["**/*.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
