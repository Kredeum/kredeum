{
  "extends": ["//"],
  "pipeline": {
    "check": {
      "dependsOn": ["format", "@kredeum/common#check"],
      "inputs": ["src/*"]
    },
    "dev": {
      "dependsOn": ["@kredeum/config#build", "@kredeum/gulp#build"],
      "inputs": ["src/*", "../contracts/addresses.json"]
    },
    "build": {
      "dependsOn": ["check", "@kredeum/gulp#build"],
      "inputs": ["src/*"],
      "outputs": ["web/dapp/assets/js/*"]
    }
  }
}
