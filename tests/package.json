{
  "name": "tests",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "clean": "rm -rf node_modules .turbo",
    "format": "prettier src/**/*.ts --write --list-different --log-level log",
    "check": "pnpm run check:eslint && pnpm run check:svelte",
    "check:eslint": "eslint src/**/*.ts",
    "check:svelte": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "test": "npm run test:unit && npm run test:e2e",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "test:e2e": "playwright test --project=chromium",
    "test:unit": "vitest",
    "playwright:chromium": "playwright install chromium"
  },
  "devDependencies": {
    "@playwright/test": "^1.43.0",
    "@sveltejs/adapter-auto": "^3.2.0",
    "@sveltejs/adapter-static": "^3.0.1",
    "@sveltejs/kit": "^2.5.5",
    "@sveltejs/vite-plugin-svelte": "^3.1.0",
    "@synthetixio/synpress": "3.7.2-beta.10",
    "@types/eslint": "^8.56.8",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.37.0",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.2.2",
    "svelte": "^4.2.13",
    "svelte-check": "^3.6.9",
    "tslib": "^2.6.2",
    "typescript": "^5.4.5",
    "viem": "^2.9.16",
    "vite": "^5.2.8",
    "vitest": "^1.4.0"
  },
  "type": "module",
  "dependencies": {
    "@kredeum/common": "workspace:^",
    "@kredeum/providers": "workspace:^"
  }
}