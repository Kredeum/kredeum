{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "plugins": ["svelte3"],
  "overrides": [
    {
      "files": ["**/*.svelte"],
      "processor": "svelte3/svelte3"
    }
  ],
  "extends": ["standard"],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "space-before-function-paren": ["error", "always"],
    "no-global-assign": ["error", { "exceptions": ["require"] }],
    "spaced-comment": "off"
  },
  "settings": {
    "svelte3/compiler-options": {
      "customElement": true
    }
  },
  "globals": {
    "ethereum": "readonly"
  }
}
