{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "resolveJsonModule": true,
    "paths": {
      "lib/*": [
        "../common/lib/*"
      ],
      "config/*": [
        "../common/config/*"
      ],
      "soltypes/*": [
        "../common/types/*"
      ],
      "scripts/*": [
        "scripts/*"
      ],
      "abis/*": [
        "../common/abis/*",
      ]
    }
  },
  "include": [
    "./scripts/**/*.ts",
    "./tests/**/*.ts",
    "./tests-ok/**/*.ts",
    "./deploy/**/*.ts",
    "../common/lib/**/*.ts",
    "../common/types/**/*.ts"
  ],
  "files": [
    "./hardhat.config.ts"
  ]
}