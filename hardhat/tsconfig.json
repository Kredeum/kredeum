{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "resolveJsonModule": true,
    "paths": {
      "lib/*": [
        "../common/lib/*"
      ],
      "config/*": [
        "../common/config/*"
      ],
      "soltypes/*": [
        "../common/types/*"
      ],
      "scripts/*": [
        "scripts/*"
      ],
      "abis/*": [
        "../common/abis/*",
      ]
    }
  },
  "include": [
    "./scripts",
    "./tests",
    "./tests-ok",
    "./deploy",
    "../common/lib",
    "../common/types"
  ],
  "files": [
    "./hardhat.config.ts"
  ]
}