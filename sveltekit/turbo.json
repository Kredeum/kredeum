{
  "extends": ["//"],
  "pipeline": {
    "check": {
      "dependsOn": ["format", "@kredeum/svelte#check"],
      "inputs": ["src/**"]
    },
    "dev": {
      "dependsOn": ["@kredeum/config#build", "@kredeum/gulp#build"],
      "inputs": ["src/**", "../contracts/addresses.json"]
    },
    "build": {
      "dependsOn": ["check", "@kredeum/gulp#build"],
      "inputs": ["src/**"],
      "outputs": ["web/dapp/index.html", "web/dapp/_app/**.*"]
    }
  }
}
