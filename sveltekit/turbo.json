{
  "extends": ["//"],
  "pipeline": {
    "check": {
      "dependsOn": ["format", "@kredeum/common#check"],
      "inputs": ["src/*"]
    },
    "dev": {
      "dependsOn": ["check", "@kredeum/gulp#build", "@kredeum/config#build"],
      "inputs": ["src/*"]
    },
    "build": {
      "dependsOn": ["check", "@kredeum/gulp#build", "@kredeum/config#build"],
      "inputs": ["src/*"],
      "outputs": ["web/dapp/index.html", "web/dapp/_app/**.*"]
    }
  }
}
