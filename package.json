  "bugs": {
    "url": "https://github.com/Kredeum/kredeum/issues"
  },
  "homepage": "https://www.kredeum.com",
  "devDependencies": {
    "@types/node": "^18.7.14",
    "http-server": "^14.1.1",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2"
  }
}