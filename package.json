{
  "name": "kredeum",
  "version": "1.0.0",
  "description": "Kredeum NFTS Factory",
  "main": "index.js",
  "scripts": {
    "all": "pnpm run clean-all && pnpm install && pnpm install-all && pnpm run build-all && pnpm run check-all",
    "install-dapp": "pnpm run install:common && pnpm run install:contracts && pnpm run install:gulp && pnpm run install:svelte",
    "build-dapp": "pnpm run build:common && pnpm run build:contracts && pnpm run build:gulp && pnpm run build:svelte",
    "install-build-all": "npm install && pnpm run install-all && pnpm run build-all",
    "install-all": "npm-run-all install:*",
    "update-all": "npm-run-all update:*",
    "dapp": "http-server web/dapp",
    "clean-all": "npm-run-all clean:*",
    "build-all": "npm-run-all build:*",
    "check-all": "npm-run-all check:*",
    "install:common": "cd common && pnpm install",
    "install:contracts": "cd contracts && pnpm install && pnpm foundry:install",
    "install:gulp": "cd gulp && pnpm install",
    "install:svelte": "cd svelte && pnpm install",
    "install:wordpress": "cd wordpress && pnpm install",
    "install:thegraph": "cd thegraph && pnpm install",
    "clean:common": "cd common && pnpm run clean",
    "clean:contracts": "cd contracts && pnpm run clean",
    "clean:gulp": "cd gulp && pnpm run clean",
    "clean:svelte": "cd svelte && pnpm run clean",
    "clean:web": "rm -rf web/dapp web/docs",
    "clean:wordpress": "cd wordpress && pnpm run clean",
    "clean:thegraph": "cd thegraph && pnpm run clean",
    "update:common": "cd common && pnpm update",
    "update:contracts": "cd contracts && pnpm update",
    "update:gulp": "cd gulp && pnpm update",
    "update:svelte": "cd svelte && pnpm update",
    "update:wordpress": "cd wordpress && pnpm update",
    "update:thegraph": "cd thegraph && pnpm update",
    "build:common": "cd common && pnpm run build",
    "build:contracts": "cd contracts && pnpm run build",
    "build:gulp": "cd gulp && pnpm run build",
    "build:svelte": "cd svelte && pnpm run build",
    "build:wordpress": "cd wordpress && pnpm run build",
    "build:thegraph": "cd thegraph && pnpm run build",
    "check:common": "cd common && pnpm run check",
    "check:contracts": "cd contracts && pnpm run check",
    "check:svelte": "cd svelte && pnpm run check",
    "check:wordpress": "cd wordpress && pnpm run check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kredeum/kredeum.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Kredeum/kredeum/issues"
  },
  "homepage": "https://www.kredeum.com",
  "devDependencies": {
    "@types/node": "^18.11.9",
    "http-server": "^14.1.1",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2"
  }
}