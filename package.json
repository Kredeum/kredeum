{
  "name": "@kredeum/kredeum-nfts",
  "scripts": {
    "all": "npm run clean && pnpm install && npm run build && npm run check && npm run tests",
    "clean": "npm run smart-clean && npm run dapp-clean && npm run wp-clean && npm run sub-clean && rm -rf node_modules && rm pnpm-lock.yaml",
    "install": "npm run wp-install && npx cypress install",
    "build": "npm run smart-build && npm run dapp-build && npm run wp-build && npm run sub-build",
    "check": "npm run smart-check && npm run dapp-check && npm run wp-check && npm run sub-check",
    "tests": "npm run smart-tests && npm run dapp-tests && npm run wp-tests && npm run sub-tests",
    "dev": "npx rollup -c -w --configPlugin typescript",
    "smart-clean": "rm -rf solidity/artifacts",
    "smart-build": "hardhat compile",
    "smart-prettier": "npx prettier solidity/contracts/*.sol **/*.ts **/*.svelte --write --loglevel error",
    "smart-solhint": "npx solhint solidity/contracts/*.sol --fix",
    "smart-eslint": "cd solidity && npx eslint ../hardhat.config.ts ../lib/*.ts **/*.ts --ignore-pattern artifacts --fix --quiet",
    "smart-check": "npm run smart-prettier && npm run smart-solhint && npm run smart-eslint",
    "smart-tests": "npx hardhat test",
    "smart-flatten": "npx hardhat flatten solidity/contracts/OpenNFTs.sol > solidity/flatten/OpenNFTs.sol",
    "smart-deploy": "npx hardhat run scripts/deploy.mjs --network ${NETWORK:-mumbai}",
    "smart-deploy-matic": "NETWORK=matic npm run smart-deploy",
    "smart-list": "npx hardhat run scripts/list.mjs",
    "dapp-clean": "rm -rf web/app/assets",
    "dapp-gulp": "cd web && npx gulp",
    "dapp-build": "npm run dapp-gulp && rollup -c --configPlugin typescript",
    "dapp-dev": "npm run dev",
    "dapp-prettier": "npx prettier **/*.svelte **/*.ts --write --loglevel error",
    "dapp-eslint": "npx eslint **/*.ts **/*.svelte --ignore-pattern solidity --ignore-pattern thegraph --fix --quiet",
    "dapp-check": "npm run dapp-prettier && npm run dapp-eslint",
    "dapp-tests": "cd web && npx cypress run",
    "dapp-start": "sirv web",
    "wp-clean": "rm -rf wordpress/vendor wordpress/kredeum-nfts/vendor wordpress/kredeum-nfts/readme.txt wordpress/kredeum-nfts/kredeum-nfts.php wordpress/kredeum-nfts/lib/js",
    "wp-install": "composer install --prefer-dist --no-progress",
    "wp-dev": "npm run dev",
    "wp-build-txt": "npx hbs-cli -D config/wordpress.json wordpress/readme.txt_handlebars -o wordpress/kredeum-nfts -e txt",
    "wp-build-php": "npx hbs-cli -D config/wordpress.json wordpress/kredeum-nfts.php_handelbars -o wordpress/kredeum-nfts -e php",
    "wp-build-vendor": "cd wordpress/kredeum-nfts && composer install --prefer-dist --no-progress",
    "wp-build-js": "rollup -c --configPlugin typescript",
    "wp-build": "npm run wp-build-txt && npm run wp-build-php && npm run wp-build-js && npm run wp-build-vendor",
    "wp-fix": "wordpress/vendor/bin/phpcbf wordpress/kredeum-nfts --ignore=vendor --extensions=php --standard=WordPress",
    "wp-format": "wordpress/vendor/bin/phpcs wordpress/kredeum-nfts -n --ignore=vendor --extensions=php --standard=WordPress",
    "wp-check": "npm run wp-fix && npm run wp-format",
    "wp-tests": "cd wordpress && npx cypress run",
    "sub-clean": "rm -rf thegraph/build thegraph/generated thegraph/subgraph.yaml",
    "sub-yaml": "npx jq '.[]|select(.chainName==\"${NETWORK:-mumbai}\")' config/networks.json | npx hbs-cli -i thegraph/subgraph.yaml_handlebar -e yaml -o thegraph",
    "sub-codegen": "cd thegraph && graph codegen",
    "sub-graph-build": "cd thegraph && graph build",
    "sub-build": "npm run sub-yaml && npm run sub-codegen && npm run sub-graph-build",
    "sub-check": "npx prettier thegraph/**/*ts  thegraph/**/*.yaml thegraph/**/*.graphql --write",
    "sub-tests": "npx mocha --experimental-json-modules thegraph/tests/*.mjs",
    "sub-predeploy": "npm run sub-clean && npm run sub-yaml && npm run sub-codegen && npm run sub-build && npm run sub-check",
    "sub-predeploy-matic": "NETWORK=matic npm run sub-predeploy",
    "sub-deploy": "npm run sub-predeploy && cd thegraph && graph deploy zapaz/eip721-${NETWORK:-mumbai} --ipfs https://api.thegraph.com/ipfs/ --node https://api.thegraph.com/deploy/ --access-token $THEGRAPH_KEY",
    "sub-deploy-matic": "NETWORK=matic npm run sub-deploy",
    "start": "npm run dapp-start"
  },
