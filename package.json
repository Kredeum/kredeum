{
  "name": "kredeum",
  "version": "1.0.0",
  "description": "Kredeum NFTS Factory",
  "main": "index.js",
  "scripts": {
    "all": "pnpm run clean-all && pnpm install && pnpm install-all && pnpm run build-all && pnpm run check-all",
    "install-dapp": "npm run install:common && npm run install:hardhat && npm run install:foundry && npm run install:gulp && npm run install:svelte",
    "build-dapp": "npm run build:common && npm run build:hardhat && npm run build:gulp && npm run build:svelte",
    "install-build-all": "npm run install-all && npm run build-all",
    "install-all": "npm-run-all install:*",
    "update-all": "npm-run-all update:*",
    "dapp": "http-server web/dapp",
    "clean-all": "npm-run-all clean:*",
    "build-all": "npm-run-all build:*",
    "check-all": "npm-run-all check:*",
    "install:common": "cd common && pnpm install",
    "install:hardhat": "cd hardhat && pnpm install",
    "install:foundry": "cd hardhat && pnpm install:foundry",
    "install:gulp": "cd gulp && pnpm install",
    "install:svelte": "cd svelte && pnpm install",
    "install:wordpress": "cd wordpress && pnpm install",
    "install:thegraph": "cd thegraph && pnpm install",
    "clean:common": "cd common && npm run clean",
    "clean:hardhat": "cd hardhat && npm run clean",
    "clean:gulp": "cd gulp && npm run clean",
    "clean:svelte": "cd svelte && npm run clean",
    "clean:web": "rm -rf web/dapp web/docs",
    "clean:wordpress": "cd wordpress && npm run clean",
    "clean:thegraph": "cd thegraph && npm run clean",
    "update:common": "cd common && pnpm update",
    "update:hardhat": "cd hardhat && pnpm update",
    "update:gulp": "cd gulp && pnpm update",
    "update:svelte": "cd svelte && pnpm update",
    "update:wordpress": "cd wordpress && pnpm update",
    "update:thegraph": "cd thegraph && pnpm update",
    "build:common": "cd common && npm run build",
    "build:hardhat": "cd hardhat && npm run build",
    "build:gulp": "cd gulp && npm run build",
    "build:svelte": "cd svelte && npm run build",
    "build:wordpress": "cd wordpress && npm run build",
    "build:thegraph": "cd thegraph && npm run build",
    "check:common": "cd common && npm run check",
    "check:hardhat": "cd hardhat && npm run check",
    "check:svelte": "cd svelte && npm run check",
    "check:wordpress": "cd wordpress && npm run check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kredeum/kredeum.git"
  },
