{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "..",
    "paths": {
      "@lib/*": ["common/lib/*"],
      "@utils/*": ["common/utils/*"],
      "@config/*": ["common/config/*"],
      "@soltypes/*": ["common/types/*"],
      "@abis/*": ["common/abis/*"],
      "@contracts/*": ["contracts/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
