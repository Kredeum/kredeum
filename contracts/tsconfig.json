{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "..",
    "paths": {
      "@lib/*": [
        "common/lib/*"
      ],
      "@utils/*": [
        "common/utils/*"
      ],
      "@config/*": [
        "common/config/*"
      ],
      "@soltypes/*": [
        "common/types/*"
      ],
      "@scripts/*": [
        "hardhat/scripts/*"
      ],
      "@abis/*": [
        "common/abis/*",
      ]
    }
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
}