{
  "name": "@kredeum/contracts",
  "version": "1.4.0",
  "author": "Kredeum",
  "description": "",
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@typechain/ethers-v5": "^11.1.2",
    "ethers": "^5.7.2",
    "solc": "0.8.19",
    "solhint": "^3.6.2",
    "solidity-coverage": "^0.8.6",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typechain": "^8.3.2",
    "typescript": "^5.3.3"
  },
  "directories": {
    "test": "tests"
  },
  "keywords": [],
  "license": "ISC",
  "main": "index.js",
  "scripts": {
    "all": "  pnpm install && pnpm install-all && pnpm build && pnpm check && pnpm tests",
    "install:foundry": "curl -L https://foundry.paradigm.xyz | bash && export PATH=$PATH:$HOME/.foundry/bin &&  foundryup && pnpm foundry:init && pnpm foundry:update",
    "build": "pnpm run build:forge && pnpm run build:typechain",
    "build:forge": "forge build",
    "build:typechain": "pnpx typechain --target ethers-v5 --out-dir types out/**/*.json",
    "check": "pnpm check:solidity",
    "check:solidity": "solhint --fix src/**/*.sol",
    "clean": "pnpm run clean:foundry && rm -rf node_modules lib types artifacts broadcast",
    "clean:foundry": "forge clean && rm -rf cache-forge out",
    "deploy:deploy": "pnpm run deploy:all --fork-url $CHAIN --sender $SENDER --account $ACCOUNT --broadcast",
    "deploy:validate": "pnpm run deploy:all --fork-url $CHAIN --sender $SENDER",
    "deploy:testnet": "SENDER=$TESTNET_SENDER ACCOUNT=$TESTNET_ACCOUNT pnpm deploy:deploy",
    "deploy:mainnet": "SENDER=$MAINNET_SENDER ACCOUNT=$MAINNET_ACCOUNT pnpm deploy:deploy --verify",
    "deploy:anvil": "export CHAIN=anvil SENDER=$ANVIL_SENDER ACCOUNT=$ANVIL_ACCOUNT  && pnpm run deploy:deploy && pnpm run deploy:validate",
    "deploy:sepolia": "CHAIN=sepolia pnpm run deploy:testnet",
    "deploy:all": "forge script scripts/DeployAllCurrent.s.sol",
    "validate:only": "pnpm run deploy:all --sender $SENDER",
    "format": "pnpm format:solidity",
    "format:solidity": "forge fmt",
    "foundry:init": "forge init --force --no-commit && rm -rf **/Counter*.sol",
    "foundry:update": "git submodule update --recursive",
    "foundry:types": "pnpx typechain --out-dir types --target ethers-v5  out/**/*.json",
    "tests": "pnpm tests:forge",
    "tests:forge": "forge test"
  }
}