        "main": "index.js",
        "scripts": {
                "all": "  pnpm install && pnpm install-all && pnpm build && pnpm check && pnpm tests",
                "install:foundry": "curl -L https://foundry.paradigm.xyz | bash && export PATH=$PATH:$HOME/.foundry/bin &&  foundryup && pnpm foundry:init && pnpm foundry:update",
                "clean": "pnpm run clean:hardhat && pnpm run clean:foundry && rm -rf node_modules",
                "clean:hardhat": "rm -rf artifacts cache-hardhat docs ../common/abis  ../common/types",
                "clean:foundry": "forge clean && rm -rf cache-forge out",
                "build": "pnpm build:hardhat",
                "build:hardhat": "hardhat typechain && hardhat compile",
                "build:foundry": "forge build",
                "format": "pnpm format:typescript && pnpm format:solidity",
                "format:typescript": "prettier **/*.ts --write --list-different --loglevel log",
                "format:solidity": "forge fmt",
                "check": "pnpm check:typescript && pnpm check:solidity",
                "check:typescript": "eslint hardhat.config.ts **/*.ts --ignore-pattern types --fix --quiet",
                "check:solidity": "solhint --fix src/**/*.sol",
                "foundry:init": "forge init --force --no-commit && rm -rf **/Counter*.sol",
                "foundry:update": "git submodule update --recursive",
                "foundry:types": "npx typechain --out-dir types --target ethers-v5  out/**/*.json",
                "tests": "pnpm tests:hardhat && pnpm tests:forge",
                "tests:hardhat": "hardhat test",
                "tests:forge": "forge test"
        },
        "version": "1.0.0"
}