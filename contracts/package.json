{
  "name": "@kredeum/contracts",
  "version": "1.4.0",
  "author": "Kredeum",
  "description": "",
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@typechain/ethers-v5": "^11.1.2",
    "ethers": "^5.7.2",
    "solc": "0.8.19",
    "solhint": "^4.5.2",
    "solidity-coverage": "^0.8.11",
    "typechain": "^8.3.2",
    "typescript": "^5.4.3"
  },
  "directories": {
    "test": "tests"
  },
  "keywords": [],
  "license": "ISC",
  "main": "index.js",
  "scripts": {
    "clean": "forge clean && rm -rf cache-forge out node_modules lib types artifacts broadcast .turbo",
    "postinstall": "pnpm install:foundry && pnpm forge:init && pnpm forge:update",
    "install:foundry": "command -v forge >/dev/null 2>&1 || pnpm foundry:install",
    "build": "pnpm build:forge && pnpm build:typechain",
    "build:forge": "$HOME/.foundry/bin/forge build",
    "build:typechain": "typechain --target ethers-v5 --out-dir types out/**/*.json",
    "check": "pnpm check:solidity",
    "check:solidity": "solhint src/**/*.sol",
    "deploy:deploy": "pnpm deploy:all --fork-url $CHAIN --sender $SENDER --account $ACCOUNT --broadcast --with-gas-price 100000000 wei",
    "deploy:validate": "pnpm deploy:all --fork-url $CHAIN --sender $SENDER",
    "deploy:testnet": "SENDER=$TESTNET_SENDER ACCOUNT=$TESTNET_ACCOUNT pnpm deploy:deploy",
    "deploy:mainnet": "SENDER=$MAINNET_SENDER ACCOUNT=$MAINNET_ACCOUNT pnpm deploy:deploy",
    "deploy:anvil": "export CHAIN=anvil SENDER=$ANVIL_SENDER ACCOUNT=$ANVIL_ACCOUNT  && pnpm deploy:deploy && pnpm deploy:validate",
    "deploy:sepolia": "CHAIN=sepolia pnpm deploy:testnet",
    "deploy:all": "forge script scripts/DeployAllCurrent.s.sol",
    "validate:only": "pnpm deploy:all --sender $SENDER",
    "format": "pnpm format:solidity",
    "format:solidity": "$HOME/.foundry/bin/forge fmt",
    "foundry:install": "curl -L https://foundry.paradigm.xyz | bash && $HOME/.foundry/bin/foundryup && pnpm forge:init",
    "forge:init": "$HOME/.foundry/bin/forge init --force --no-commit && rm -f **/Counter*.sol",
    "forge:update": "git submodule update --recursive",
    "tests": "pnpm tests:forge",
    "tests:forge": "forge test"
  }
}
